[push]
	default = current
[core]
    pager = diff-so-fancy | less --tabs=4 -RFXGJ
[alias]
    pl = pull --prune --ff-only
    plr = pull --rebase --prune
    pu = push
    co = checkout
    cob = checkout -b
    br = branch
    ci = commit
    cm = commit -m
    ca = commit --amend
    can = commit --amend --no-edit
    a = add
    wd = diff --color-words="[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+"
    d = diff
    s = status -sb
    l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an]" --decorate
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an]" --decorate --numstat
    lb = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an]" --decorate master..
[diff]
	compactionHeuristic = true
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[color "diff"]
  commit = green
  meta = yellow
  frag = cyan
  old = red
  new = green
  whitespace = red reverse
