[alias]
    pl = pull --rebase --prune
    pu = push
    pub = push -u origin !$
    co = checkout
    cob = checkout -b
    br = branch
    ci = commit
    cm = commit -m
    ca = commit --amend
    can = commit --amend --no-edit
    a = add
    d = diff
    s = status -sb
    l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an]" --decorate
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an]" --decorate --numstat
    lb = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%an]" --decorate master..
    worddiff = !git diff --color | ~/bin/diff-highlight | less -r
[diff]
	compactionHeuristic = true
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[interactive]
	diffFilter = diff-highlight
