# Turn on screenshots
# Select an area
bindsym --release Control+Print exec scrot -s $HOME/screenshots/%Y-%m-%d_%H-%M-%S.png
# Take the focused window
bindsym --release Control+Shift+Print exec scrot -u $HOME/screenshots/%Y-%m-%d_%H-%M-%S.png

